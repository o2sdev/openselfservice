import { beforeEach, describe, expect, it, vi } from 'vitest';

import { Sdk } from '@o2s/framework/sdk';

import { {{camelCase name}} } from './{{kebabCase name}}';

describe('{{pascalCase name}} SDK', () => {
    let mockSdk: Sdk;

    beforeEach(() => {
        mockSdk = {
            makeRequest: vi.fn().mockResolvedValue({
                title: 'Test {{pascalCase name}}',
            }),
        } as unknown as Sdk;
    });

    it('should be defined', () => {
        const sdk = {{camelCase name}}(mockSdk);
        expect(sdk).toBeDefined();
        expect(sdk.blocks).toBeDefined();
        expect(sdk.blocks.get{{pascalCase name}}).toBeDefined();
    });

    it('should call makeRequest with correct parameters', async () => {
        const sdk = {{camelCase name}}(mockSdk);
        const query = { id: 'test-block' };
        const headers = { 'x-locale': 'en' };

        await sdk.blocks.get{{pascalCase name}}(query, headers);

        expect(mockSdk.makeRequest).toHaveBeenCalledWith({
            method: 'get',
            url: '/blocks/{{kebabCase name}}',
            headers: expect.objectContaining({
                'x-locale': 'en',
            }),
            params: query,
        });
    });

    it('should include authorization header when provided', async () => {
        const sdk = {{camelCase name}}(mockSdk);
        const query = { id: 'test-block' };
        const headers = { 'x-locale': 'en' };
        const authorization = 'test-token';

        await sdk.blocks.get{{pascalCase name}}(query, headers, authorization);

        expect(mockSdk.makeRequest).toHaveBeenCalledWith(
            expect.objectContaining({
                headers: expect.objectContaining({
                    Authorization: 'Bearer test-token',
                }),
            }),
        );
    });
});
