{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "concurrency": "10",
    "tasks": {
        "init": {},
        "build": {
            "cache": true,
            "dependsOn": [
                "^build"
            ],
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                "!.next/cache/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ]
        },
        "format": {
            "dependsOn": [
                "^format"
            ]
        },
        "predev": {
            "cache": true
        },
        "dev": {
            "cache": false,
            "persistent": true,
            "inputs": [
                "$TURBO_DEFAULT$",
                ".env*"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                "!.next/cache/**"
            ],
            "dependsOn": [
                "^build"
            ]
        },
        "start": {
            "cache": false,
            "persistent": true
        }
    }
}
