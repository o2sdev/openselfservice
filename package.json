{
    "name": "o2s",
    "private": true,
    "scripts": {
        "prepare": "husky",
        "dev": "turbo dev",
        "build": "turbo build",
        "start": "turbo start",
        "format": "turbo format",
        "lint": "turbo lint",
        "test": "turbo test",
        "generate": "turbo gen",
        "docs": "turbo start --filter=@o2s/docs",
        "changeset": "changeset",
        "version-packages": "changeset version",
        "prerelease": "turbo run build",
        "release": "changeset publish",
        "check-deps": "turbo run check-deps",
        "update-deps:patch": "turbo run update-deps:patch && npm install",
        "update-deps:minor": "turbo run update-deps:minor && npm install",
        "update-deps:latest": "turbo run update-deps:latest && npm install"
    },
    "engines": {
        "node": ">=22"
    },
    "packageManager": "npm@11.3.0",
    "workspaces": [
        "apps/*",
        "packages/*",
        "packages/configs/*",
        "packages/integrations/*",
        "packages/utils/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^19.8.0",
        "@commitlint/config-conventional": "^19.8.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "turbo": "^2.5.0",
        "typescript": "5.8.3"
    },
    "dependencies": {
        "@changesets/cli": "^2.29.0"
    }
}